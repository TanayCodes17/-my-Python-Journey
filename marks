def student_results(marks1,marks2,marks3):
    total=marks1+marks2+marks3
    avg=total/3
    print(f"Your total is{total}and your average is{avg}")
    if avg>=50:
     print("You pass")
    else:
     print("You fail")
     return total,avg
m1=int(input("enter the marks of your 1st subject"))
m2=int(input("enter the marks of your 2nd subject"))
m3=int(input("enter the marks of your 3rd subject"))
student_results(m1,m2,m3)
